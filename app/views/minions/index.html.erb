<p id="notice"><%= notice %></p>

<h1>Minions</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Option1</th>
      <th>Option2</th>
      <th>Option3</th>
      <th>Option4</th>
      <th>Ans</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @minions.each do |minion| %>
      <tr>
        <td><%= minion.question %></td>
        <td><%= minion.option1 %></td>
        <td><%= minion.option2 %></td>
        <td><%= minion.option3 %></td>
        <td><%= minion.option4 %></td>
        <td><%= minion.ans %></td>
        <td><%= link_to 'Show', minion %></td>
        <td><%= link_to 'Edit', edit_minion_path(minion) %></td>
        <td><%= link_to 'Destroy', minion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

